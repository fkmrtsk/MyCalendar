<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/navigation_graph"
            app:startDestination="@id/currentFragment">

            <fragment
                android:id="@+id/currentFragment"
                android:name="com.example.mycalendar.CurrentFragment"
                android:label="fragment_current"
                tools:layout="@layout/fragment_current" >
                <action
                    android:id="@+id/action_current_to_left"
                    app:destination="@id/leftFragment" />
                <action
                    android:id="@+id/action_current_to_right"
                    app:destination="@id/rightFragment" />
            </fragment>

            <fragment
                android:id="@+id/leftFragment"
                android:name="com.example.mycalendar.LeftFragment"
                android:label="fragment_left"
                tools:layout="@layout/fragment_left" >
                <action
                    android:id="@+id/action_current_to_left"
                    app:destination="@id/leftFragment" />
                <action
                    android:id="@+id/action_current_to_right"
                    app:destination="@id/rightFragment" />
                <argument
                    android:name="year"
                    app:argType="integer"/>
                <argument
                    android:name="month"
                    app:argType="integer"/>
            </fragment>

            <fragment
                android:id="@+id/rightFragment"
                android:name="com.example.mycalendar.RightFragment"
                android:label="fragment_right"
                tools:layout="@layout/fragment_right">
                <action
                    android:id="@+id/action_current_to_left"
                    app:destination="@id/leftFragment" />
                <action
                    android:id="@+id/action_current_to_right"
                    app:destination="@id/rightFragment" />
                <argument
                    android:name="year"
                    app:argType="integer"/>
                <argument
                    android:name="month"
                    app:argType="integer"/>
            </fragment>

</navigation>